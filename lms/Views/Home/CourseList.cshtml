@model IEnumerable<lms.Models.Course>
@{
    ViewData["Title"] = "Courses";
}

<div class="untree_co-hero overlay" style="background-image: url('images/img-school-3-min.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Available courses</h1>
                        <div class="mb-5 text-white desc mx-auto" data-aos="fade-up" data-aos-delay="200">
                            <p>Another free template by <a href="https://untree.co/" target="_blank" class="link-highlight">Untree.co</a>. Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live.</p>
                        </div>

                    </div>


                </div>

            </div>

        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div>


<div class="d-flex gap-2 m-4">
    @foreach (var item in Model)
    {
        <div class="card custom-card" style="width: 300px;">
            <img src="~/images/gal_2.jpg" style="width: 100%;" class="card-img-top custom-card-img" alt="Card Image">
            <div class="card-body">
                <h5 class="card-title custom-card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <p class="card-text custom-card-text">Category: @Html.DisplayFor(modelItem => item.Category.Name)</p>
                <p class="card-text custom-card-text">Author: @Html.DisplayFor(modelItem => item.Author)</p>
                <p class="card-text custom-card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                <a href="#" class="btn btn-primary custom-card-button">Learn More</a>
            </div>
        </div>



    }
</div>
    <div class="row">
        <div class="col-md-6 text-center">
            <a class="btn btn-primary btn-lg" asp-controller="Categories" asp-action="Index">Categories</a>
        </div>
        <div class="col-md-6 text-center">
            <a class="btn btn-primary btn-lg" asp-controller="Courses" asp-action="Index">Courses</a>
        </div>
    </div>
</div>


